{% extends 'base.html.twig' %}

{% block title %}Assessment{% endblock %}

{% block body %}
    <h1>Assessment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ assessment.id }}</td>
            </tr>
            <tr>
                <th>Method</th>
                <td>{{ assessment.method }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ assessment.duration }}</td>
            </tr>
            <tr>
                <th>Stage</th>
                <td>{{ assessment.stage }}</td>
            </tr>
            <tr>
                <th>IsSupervised</th>
                <td>{{ assessment.isSupervised ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ assessment.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('assessment_index') }}">back to list</a>

    <a href="{{ path('assessment_edit', {'id': assessment.id}) }}">edit</a>

    {{ include('assessment/_delete_form.html.twig') }}
{% endblock %}
